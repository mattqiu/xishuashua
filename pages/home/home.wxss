  width:435rpx;
  height: 200rpx;
  padding-left: 25rpx;
}
.hotSellItem .detailInfo .name{
  font-size: 26rpx;
  color: #444;
  line-height: 1.5;
  height: 74rpx;
}
.hotSellItem .detailInfo .goodcount{
  font-size: 24rpx;
  color: #888;
  line-height: 1.0;
  margin-top: 30rpx;
