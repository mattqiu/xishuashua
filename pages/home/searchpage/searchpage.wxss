/* pages/home/searchpage/searchpage.wxss */

.scrollView {
  padding-top:25rpx;
}
.searchBox {
  margin-left:20rpx;
  margin-right:20rpx;
  height:60rpx;
  margin-bottom: 20rpx;
}
.searchBox input{ 
  
  height: 60rpx; 
  width: 570rpx; 
  border-radius: 10rpx; 
  background-color: white;
  text-align: center;
  font-size: 26rpx;
  color: #B2B2B2;
  border-color: #B2B2B2;
}
.searchBox button{ 
  
  height: 60rpx; 
  width: 120rpx;
  text-align: center; 
  font-size:24rpx; 
  line-height: 60rpx;
  color: white;
}

/*搜索为空*/
.enptyBox {
  text-align: center;
  margin-top: 195.5rpx;
}
.enptyBox image {
  width: 300rpx;
  height : 300rpx;
}
.enptyBox .text {
  margin-top: 20rpx;
  font-size: 34rpx;
  line-height: 1.0;
  color: #B2B2B2;
}


/*热门搜索*/
.hotsearchBox{
  padding: 30rpx 60rpx 0rpx 60rpx;
  text-align: left;
}
.hotsearchBox .name{
  color: #888;
  font-size: 32rpx;
  line-height: 1.0;
}
.hotsearchBox .contentBox{
  margin-top: 20rpx;
}
.hotsearchBox .contentBox .contentBoxItem{
  padding: 6rpx 15rpx 6rpx 15rpx;
  height: 34rpx;
  font-size: 22rpx;
  line-height: 34rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
}



.hotSell .title{
  margin-top: 25rpx;
  margin-left: 20rpx;
  margin-bottom: -5rpx;
  font-size:30rpx;
  line-height: 1.0;
}
.hotSell .titleImg{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.hotSellItem {
  padding-top: 25rpx;
  padding-left: 20rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid rgb(220, 220, 220);
}

.hotSellItem image{
  width:250rpx;
  height: 200rpx;
} 
.hotSellItem .detailInfo {
  width:435rpx;
  height: 200rpx;
  padding-left: 25rpx;
}
.hotSellItem .detailInfo .name{
  font-size: 26rpx;
  color: #444;
  line-height: 1.5;
  height: 74rpx;
}
.hotSellItem .detailInfo .goodcount{
  font-size: 24rpx;
  color: #888;
  line-height: 1.0;
  margin-top: 30rpx;
}
.hotSellItem .detailInfo .price{
  font-size: 32rpx;
  color: #F38500;
  line-height: 1.0;
  margin-top: 30rpx;
}
.hotSellItem .detailInfo .price .oldprice{
  font-size: 22rpx;
  color: #2b2b2b;
  line-height: 1.0;
  text-decoration:line-through;
  margin-left: 15rpx;
  margin-top: 10rpx;
}